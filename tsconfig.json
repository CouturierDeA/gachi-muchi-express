{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "jsx": "react",
    "reactNamespace": "GSX",
    "types": [
      "jest",
      "node"
    ],
  },
  "lib": ["es2019"],
  "exclude": [
    "node_modules",
    "tests",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": [
    "src/app.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
}
